<div id = "like_form"> 
  <% if logged_in?%>
    <%if current_user.liking?(@recipe) %>
      <%=render"unlike"%>
    <%else%>
      <%=render"like"%>
    <%end%>
  <% else %>
    <i class="far fa-heart like-btn" ></i>
  <% end%>
     <% if @recipe.likers.count > 0%>
        <div><%= @recipe.likers.count %></div>
      <%end%>
  </div>