<div class="nested-fields form-row">
  <%= f.hidden_field :_destroy %>
  <div class="form-group col-7">
    <% f.label :ingre, "Ingredient / \n原材料" %>
    <%= f.text_field :ingre, class: 'form-control'%>
  </div>
  <div  class="form-group col-4">
    <% f.label :amount, "Amount / \n分量" %>
    <%= f.text_field :amount, class: 'form-control' %>
  </div>
  <div class="form-group col-1 remove">
    <%= link_to "×", "#", class: "remove_fields" %>
  </div>
</div>
