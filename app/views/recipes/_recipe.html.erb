<ol id="recipe-<%= recipe.id %>" class="item">
  <div class="content recipe">
    <div class="recipe-detail">
        <p class="recipe-title"><%= link_to  recipe.title , recipe_path(recipe) %></p>
        <p class="recipe-about"><%= recipe.about.truncate(218)  %></p>
        <p><span class="timestamp"></p>
          <p>Posted <%= time_ago_in_words(recipe.created_at) %> ago.</p>
        <p class="user"><%= link_to recipe.user.name, recipe.user %></p>
          <% if current_user?(recipe.user) %>
          <p class="delete"><%= link_to "Delete", recipe, method: :delete,
                                         data: { confirm: "You sure?" } %></p>
          <p><%= link_to "Edit", edit_recipe_path(recipe) %></p>
          <% end %>
        </span>
    </div>
</div>
</ol>
